      </div>
    </div>
  <% end %>
  <% if alert %>
    <div class="container">
      <div class="col-sm-10 col-sm-offset-1 col-xs-12">
        <div class="box">
          <div class="text-center">
            <p class="alert"><%= alert %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
