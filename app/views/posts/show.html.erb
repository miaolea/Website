<div class="container">
  <div class="row">
    <div class="box">
      <div class="col-lg-12 text-center blog-content">
        <h2><%= @post.title %></h2>
        <h5><%= @post.created_at.strftime('%b %d, %Y') %></h5>
        <div class="postshow">
          <div><%= raw @post.body %></div>
        </div>
      </div>
    </div>
  </div>
</div>
